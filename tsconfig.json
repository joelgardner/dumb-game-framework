{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "target": "es6",
    "isolatedModules": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*", "./test/**/*"]
}
